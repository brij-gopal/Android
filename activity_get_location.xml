<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:drawable/picture_frame"
    tools:context="com.example.brij.sunshine.get_location">

    <LinearLayout
        android:layout_margin="2dp"
        android:padding="15dp"
        android:background="@android:drawable/picture_frame"
        android:onClick="location"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
           android:layout_marginLeft="10dp"
            android:text="Location"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/set_loc"
            android:layout_marginLeft="20dp"
            android:text="Location"
            android:typeface="serif"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>




    <LinearLayout
        android:padding="15dp"
        android:layout_margin="2dp"
        android:background="@android:drawable/picture_frame"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:typeface="monospace"
           android:layout_marginLeft="5dp"
            android:text="Temperature Units"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:typeface="serif"
            android:id="@+id/set_temp"
            android:layout_marginLeft="20dp"
            android:text="celsius"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




    </LinearLayout>


    <LinearLayout
        android:layout_margin="2dp"
        android:padding="15dp"
        android:background="@android:drawable/picture_frame"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="10dp"
            android:text="Weather Notification"
            android:textSize="22sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/notify_check"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            </LinearLayout>
        <TextView
            android:typeface="serif"
            android:layout_marginLeft="30dp"
            android:text="Not Enabled"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
